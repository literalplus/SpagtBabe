new file mode 100644
index 0000000..cfa9aab
--- /dev/null
+++ b/plugins/cookies.py
@@ -0,0 +1,31 @@
+from util import hook
+
+
+@hook.command(autohelp = False)
+def cookie(inp, action=None, nick=None):
+    """cookie [target] -- Shares a cookie with [target]. Defaults to sharing a cookie with you."""
+
+    target = inp.strip()
+
+    if target == "":
+        target = nick
+    action("shares a cookie with " + target)
+
+@hook.command(autohelp = False)
+def cookies(inp, action = None, nick = None):
+    """cookies [target][:amount]-- Shares [amount] cookies with [target]. Defaults to sharing cookies with you"""
+
+    inp = inp.strip()
+
+    if ":" in inp:
+        pos = inp.rfind(":")
+        target = inp[:pos]
+        amount = inp[pos + 1:] + " "
+    else:
+        target = inp.strip()
+        amount = ""
+
+    if target == "":
+        target = nick
+    
+    action("shares " + amount + "cookies with " + target)
