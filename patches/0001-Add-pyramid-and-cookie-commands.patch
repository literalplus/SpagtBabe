+++ b/plugins/pyramid.py
@@ -0,0 +1,17 @@
+
+from util import hook
+
+@hook.command("pyramide", permissions=["botcontrol"])
+@hook.command(permissions=["botcontrol"])
+def pyramid(inp, message=None):
+    """pyramid <text> - Am pyramid le text"""
+    
+    while len(inp) > 0:
+      message(inp)
+      if len(inp) != 1:
+        inp = inp[0:len(inp) - 1]
+        while inp[-1] == " ":
+          inp = inp[0:len(inp) - 1]
+      else:
+        break
+    message("/ ")
