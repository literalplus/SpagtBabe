+++ b/plugins/pyramid.py
@@ -0,0 +1,14 @@
+from cloudbot import hook
+
+@hook.command(permissions=["botcontrol"])
+def pyramid(inp, message=None):
+    """pyramid <text> - Am pyramid le text"""
+
+    while len(inp) > 0:
+        message(inp)
+        if len(inp) != 1:
+            inp = inp[:-1]
+            while inp[-1] == " ":
+                inp = inp[:-1] #remove whitespace to avoid seemingly duplicate lines
+        message("/ ")
+
